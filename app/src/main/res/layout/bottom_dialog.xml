<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_dialog_bg">

    <View
        android:id="@+id/bottomDialogGrayLineTop"
        android:layout_width="32dp"
        android:layout_height="4dp"
        android:layout_marginTop="22dp"
        android:background="@color/gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/bottomDialogTitleTV"
        style="@style/GrayText16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/bottom_dialog_choose_how_you_want_to_add_a_photo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bottomDialogGrayLineTop" />

    <ImageView
        android:id="@+id/bottomDialogCameraImgV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_camera"
        app:layout_constraintStart_toStartOf="@id/bottomDialogTitleTV"
        app:layout_constraintTop_toBottomOf="@id/bottomDialogTitleTV" />

    <TextView
        style="@style/BlackText18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="@string/bottom_dialog_camera"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/bottomDialogCameraImgV"
        app:layout_constraintTop_toBottomOf="@id/bottomDialogCameraImgV" />

    <ImageView
        android:id="@+id/bottomDialogGalleryImgV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_gallery"
        app:layout_constraintEnd_toEndOf="@id/bottomDialogTitleTV"
        app:layout_constraintTop_toBottomOf="@id/bottomDialogTitleTV" />

    <TextView
        style="@style/BlackText18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="@string/bottom_dialog_gallery"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/bottomDialogGalleryImgV"
        app:layout_constraintStart_toStartOf="@+id/bottomDialogGalleryImgV"
        app:layout_constraintTop_toBottomOf="@id/bottomDialogGalleryImgV" />


</androidx.constraintlayout.widget.ConstraintLayout>